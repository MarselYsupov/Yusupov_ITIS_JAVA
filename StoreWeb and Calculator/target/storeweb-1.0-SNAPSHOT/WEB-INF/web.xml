<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
         metadata-complete="true">

    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>ru.itis.web.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>product</servlet-name>
        <servlet-class>ru.itis.web.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>product</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>allProducts</servlet-name>
        <servlet-class>ru.itis.web.AllProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>allProducts</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>


<servlet>
<servlet-name>calculatorForm</servlet-name>
<servlet-class>ru.itis.web.CalculatorServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>calculatorForm</servlet-name>
<url-pattern>/calculator</url-pattern>
</servlet-mapping>


<servlet>
<servlet-name>calculate</servlet-name>
<servlet-class>ru.itis.web.CalculateServlet</servlet-class>
</servlet>
<servlet-mapping>
<servlet-name>calculate</servlet-name>
<url-pattern>/calculate</url-pattern>
</servlet-mapping>


 <servlet>
        <servlet-name>addProductForm</servlet-name>
        <servlet-class>ru.itis.web.AddProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProductForm</servlet-name>
        <url-pattern>/addProduct</url-pattern>
    </servlet-mapping>

<servlet>
        <servlet-name>addProduct</servlet-name>
        <servlet-class>ru.itis.web.SaveProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProduct</servlet-name>
        <url-pattern>/saveProduct</url-pattern>
    </servlet-mapping>
</web-app>